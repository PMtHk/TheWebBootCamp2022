<% layout("/layouts/boilerplate") %>
<h1>Edit Campground</h1>
<form action="/campgrounds/<%=targetCamp._id%>?_method=PUT" method="POST">
  <div>
    <label for="title">Title</label>
    <input
      type="text"
      id="title"
      name="campground[title]"
      value="<%=targetCamp.title%>"
    />
  </div>
  <div>
    <label for="location">Location</label>
    <input
      type="text"
      id="location"
      name="campground[location]"
      value="<%=targetCamp.location%>"
    />
  </div>
  <button>Update Campground</button>
</form>
<a href="/campgrounds/<%=targetCamp._id%>">Back To Campground</a>
